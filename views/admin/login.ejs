<%- include('../layout/head.ejs'); %>
<div style="background: url('/img/plain-blue-background.jpg'); height: 100vh;">
   <div class="container">
      <!-- Outer Row -->
      <div class="row justify-content-center">
         <div class="col-xl-10 col-lg-12 col-md-9">
            <div class="card o-hidden border-0 shadow-lg my-5">
               <div class="card-body p-0">
                  <!-- Nested Row within Card Body -->
                  <div class="row">
                     <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                     <div class="col-lg-6">
                        <div class="p-5">
                           <div class="text-center">
                              <h1 class="h2 text-blue-900 mb-4">RADA</h1>
                              <h2 class="h4 text-gray-900 mb-4">Admin Login</h2>
                           </div>
                           <%- include('../partials/messages.ejs'); %>
                           <form class="user" action="/admin/login" method="POST">
                              <div class="form-group">
                                 <input type="email" class="form-control form-control-user" name="email"
                                    id="exampleInputEmail" aria-describedby="emailHelp"
                                    placeholder="Enter Email Address..." />
                              </div>
                              <div class="form-group">
                                 <input type="password" class="form-control form-control-user" id="exampleInputPassword"
                                    name="password" placeholder="Password" />
                              </div>
                              <div class="form-group">
                                 <div class="custom-control custom-checkbox small">
                                    <input type="checkbox" class="custom-control-input" id="customCheck" />
                                    <label class="custom-control-label" for="customCheck">Remember Me</label>
                                 </div>
                              </div>
                              <button type="submit" class="btn btn-primary btn-user btn-block">
                                 Login
                              </button>
                           </form>
                           <hr />
                           <div class="text-center">
                              <a class="small" href="/admin/forgot-password">Forgot Password?</a>

                           </div>
                           <div class="text-center">
                              <a class="small" href="/">Home Screen?</a>
                           </div>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>
<%- include('../layout/end.ejs'); %>